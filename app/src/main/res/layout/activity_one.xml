<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_one"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_alternates_black"
            android:text="@string/app_name"
            android:textColor="#42ECB4"
            android:textSize="24sp"
            android:layout_marginBottom="58dp"
            app:layout_constraintBottom_toTopOf="@+id/lin_one"
            app:layout_constraintStart_toStartOf="@+id/lin_one" />
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/lin_one"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginBottom="68dp"
            android:indeterminate="true"
            android:progress="55"
            app:indicatorTrackGapSize="0dp"
            app:trackStopIndicatorSize="0dp"
            app:trackCornerRadius="34dp"
            android:layout_marginHorizontal="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:trackColor="#45514D"
            app:indicatorColor="#3FECB2"
            app:trackThickness="8dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

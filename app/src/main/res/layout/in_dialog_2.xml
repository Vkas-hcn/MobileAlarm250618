<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/con_dialog_ser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#67000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/bg_dialog_main"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_dialog_main" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Personalized Home"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="Set as default launcher for smoother use."
            android:textColor="#FFACACAC"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_set_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:background="@drawable/bg_next"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingVertical="16dp"
            android:text="Set as default"
            android:textColor="#FF000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_ignore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:paddingTop="11dp"
            android:text="ignore"
            android:textColor="#FFFFFFFF"
            android:textSize="12sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>